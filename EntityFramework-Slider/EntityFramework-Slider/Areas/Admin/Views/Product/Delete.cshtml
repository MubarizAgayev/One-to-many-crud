@model Product
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-left:300px;margin-top:100px">
    
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" disabled id="customFile" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span><br />
        </div>
        <div class="form-group">
            <label>Description</label>
            <input class="form-control" disabled id="description-text" value="@ViewBag.desc" />
            <span class="text-danger" asp-validation-for="Description"></span><br />
        </div>
        <div class="form-group">
            <label>Price</label>
            <input type="text" class="form-control" disabled id="customFile" asp-for="Price" />
            <span class="text-danger" asp-validation-for="Price"></span><br />
        </div>
        <div class="form-group">
            <label>Count</label>
            <input class="form-control" disabled id="customFile" asp-for="Count" />
            <span class="text-danger" asp-validation-for="Count"></span><br />
        </div>
        <label>Category</label>
        <input class="form-control" disabled id="customFile" asp-for="Category.Name" />
        <div class="form-group">
            @foreach (var item in Model.Images)
            {
                <img style="width:150px;height:150px" src="~/img/@item.Image" />  
            }
        </div>


    <form asp-action="Delete" method="post">
        <div class="form-group">
            <div class="buttons my-3">
                <button type="submit" class="btn btn-primary">Delete</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>
</div>

